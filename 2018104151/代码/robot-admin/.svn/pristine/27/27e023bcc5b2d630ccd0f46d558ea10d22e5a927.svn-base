													<option value="${notice.noticeid }" <c:if test="${vs.index == 0 }">selected</c:if>>${notice.title}</option>
												</c:forEach>
											</c:when>
											<c:otherwise>
												<option value="-1" selected>没有相关数据</option>
											</c:otherwise>
										</c:choose>
										</select>
										<select name="subNewType" id="subNewType" title="新手攻略二级分类" style="display:none;">
