    		        right: '4%',
    		        bottom: '3%',
    		        containLabel: true
    		    },
    		    toolbox: {
    		        feature: {
    		            saveAsImage: {}
    		        }
    		    },
    		    xAxis: {
    		        type: 'category',
    		        boundaryGap: false,
    		        data:${xval},
    		        axisLabel:{  
                        //interval:0,//横轴信息全部显示  
                        //rotate:-30,//-30度角倾斜显示  
                   }  
    		    },
    		    yAxis: {
    		        type: 'value'
    		    },
    		    series: [
    		        {
    		            name:'体验版用户',
    		            type:'line',
    		          
