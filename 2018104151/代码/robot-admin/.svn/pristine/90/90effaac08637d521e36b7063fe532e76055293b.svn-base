					 /* alert(result.xval2);
					alert(result.lines2);
					alert(result.list); */
			        // 指定图表的配置项和数据
			     var options = myChart2.getOption();
			     myChart2.clear();
			     options.legend.data= result.lines2;
			     options.xAxis[0].data = result.xval2;
			     for (var i= 0;  i< result.list.length; i++) {
			    	 options.series[i].data = result.lines2[i];
			    	 options.series[i].data = result.list[i];
				}
			     
				 //options.series[1].data = result.ymemfees;
		        // 使用刚指定的配置项和数据显示图表。
		        myChart2.setOption(options,true);
					
				},
				error : function() {
                    alert("异常！");
                }
			})
		}
	</script>


</body>
