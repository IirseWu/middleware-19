    		        },
    		        {
    		            name:'付费版用户',
    		            type:'line',
    		           
    		            data:${ymemfees}
    		        }
    		    ]
    		};

        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
        
    </script>
    
