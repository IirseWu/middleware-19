<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RobotVerMapper">
	
	<!--表名 -->
	<sql id="tableName">
		r_sys_robot_version
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		VERSIONID,	
		GRADE,	
		NAME,	
		CONTENT,	
		PRICE,	
		STREAM,	
		STORAGE,	
		USENUM,	
		PURE,	
		CREATETIME,	
		TAIL,	
		FILTER,	
		REMAIN1,	
		REMAIN2,	
		REMAIN3,	
		REMAIN4,	
		ICON,	
		MONTHPRICE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{VERSIONID},	
		#{GRADE},	
		#{NAME},	
		#{CONTENT},	
		#{PRICE},	
		#{STREAM},	
		#{STORAGE},	
		#{USENUM},	
		CONVERT(#{PURE},SIGNED) ,	
		#{CREATETIME},	
		CONVERT(#{TAIL},SIGNED) ,	
		CONVERT(#{FILTER},SIGNED) ,	
		#{REMAIN1},	
		#{REMAIN2},	
		#{REMAIN3},	
		#{REMAIN4},	
		#{ICON},	
		#{MONTHPRICE}

	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(	
		GRADE,	
		NAME,	
		CONTENT,	
		PRICE,	
		STREAM,	
		STORAGE,	
		USENUM,	
		PURE,	
		CREATETIME,	
		TAIL,	
		FILTER,	
		REMAIN1,	
		REMAIN2,	
		REMAIN3,	
		REMAIN4,	
		ICON,	
		MONTHPRICE,
		ISDELETE
		) values (
		#{GRADE},	
		#{NAME},	
		#{CONTENT},	
		#{PRICE},	
		#{STREAM},	
		#{STORAGE},	
		#{USENUM},	
		#{PURE},	
		NOW(),	
		#{TAIL},	
		#{FILTER},	
		#{REMAIN1},	
		#{REMAIN2},	
		#{REMAIN3},	
		#{REMAIN4},	
		#{ICON},	
		#{MONTHPRICE},
		0
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		update 
		<include refid="tableName"></include>
		set ISDELETE=1
		where 
			VERSIONID = #{VERSIONID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			VERSIONID = #{VERSIONID},
			GRADE = #{GRADE},
			NAME = #{NAME},
			CONTENT = #{CONTENT},
			PRICE = #{PRICE},
			STREAM = #{STREAM},
			STORAGE = #{STORAGE},
			USENUM = #{USENUM},
			PURE = #{PURE},
			TAIL = #{TAIL},
			FILTER = #{FILTER},
			REMAIN1 = #{REMAIN1},
			REMAIN2 = #{REMAIN2},
			REMAIN3 = #{REMAIN3},
			REMAIN4 = #{REMAIN4},
			ICON = #{ICON},
			MONTHPRICE = #{MONTHPRICE}
		where 
		VERSIONID = #{VERSIONID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VERSIONID = #{VERSIONID}
	</select>
	
	<!-- 检查该版本是否还有机器人使用 -->
	<select id="checkVer" parameterType="pd" resultType="pd">
		SELECT id FROM r_sys_robot
	WHERE grade in(
	SELECT grade FROM r_sys_robot_version
	WHERE VERSIONID = #{VERSIONID}
	)
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ISDELETE=0
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				NAME like '%${pd.keywords}%'
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ISDELETE=0
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VERSIONID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
	<!-- fh313596790qq(青苔) -->
</mapper>